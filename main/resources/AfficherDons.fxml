<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.AfficherDonsController">

    <TableView fx:id="donsTable" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="400.0">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="userIdColumn" text="User ID"/>
            <TableColumn fx:id="nbPointsColumn" text="Nombre de Points"/>
            <TableColumn fx:id="dateAjoutColumn" text="Date d'Ajout"/>
        </columns>
    </TableView>

    <Button text="Importer Dons" layoutX="10.0" layoutY="220.0" onAction="#importerDons"/>

</AnchorPane>
